<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="ATSuccessStory">
<body>
<div metal:define-macro="portlet" tal:define="view here/@@successstory_view;
                                              result view/success_global">

<dl class="portlet" id="portlet-success-stories" tal:condition="result">

    <dt class="portletHeader">
        <span id="portlet-success-header"
              i18n:translate="box_success_stories">Success Stories</span>
    </dt>

    <dd class="portletItem">
        <div tal:define="success_story python:result.getObject()">
            <a href="#" tal:attributes="href python:result.getPath()">
                <span tal:replace="structure python:success_story.tag(scale='atss')"/>
<!--              style="float:left" -->
            </a>
            <a href="#" tal:attributes="href python:result.getPath()">
                <strong>
                    <span tal:content="python:success_story.Title()"/>
                </strong>
            </a>
            <p id="portlet-success-description"
               tal:content="structure python:success_story.Description()"/>
            <a href="#" tal:attributes="href python:'/'.join(context.getPhysicalPath())+'/moreStories?port_type=global&from_id='+context.getId()"> 
                <span id="portlet-success-more"
                    i18n:translate="box_more_success">More Success Stories</span>
            </a>

        </div>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>

</div>
</body>
</html>
